{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-console": false,
        "no-trailing-whitespace": [
            true,
            "ignore-blank-lines"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "linebreak-style": [
            true,
            "CRLF"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "max-line-length": false,
        "arrow-parens": false
    }
}